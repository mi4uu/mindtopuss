{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "enabled": true,
    "lineEnding":"lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses":"always",
      "semicolons":"asNeeded",
      "jsxQuoteStyle":"single",
      "trailingCommas":"all"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
     "correctness":{
      "noUnusedVariables":"off"
     },
      "style":{
        "noInferrableTypes":"off"
      }
    }
  }
}
